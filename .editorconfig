# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4
charset = utf-8

# 2 space indentation for JavaScript, CSS, JSON and HTML
[*.{js,json,jinja2,html,css}]
indent_style = space
indent_size = 2
charset = utf-8

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
